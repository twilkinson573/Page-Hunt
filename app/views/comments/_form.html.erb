<%= form_for([@article, @article.comments.build]) do |f| %>
  
  <div class="row">
    <div class="col-lg-3">
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :commenter, autofocus: true, class: "form-control" %>
      </div>
    </div>
      <div class="col-lg-1">
    <div class="form-group">
      <%= f.label :score %>
      <%= f.number_field :score, autofocus: true, class: "form-control", min: 0, max: 10 %>
    </div>
  </div>
  </div>
    

  
  <div class="row">
    <div class="col-lg-6">
      <div class="form-group">
        <%= f.label :feedback %>
        <%= f.text_area :body, autofocus: true, class: "form-control" %>
      </div>
        
      <div class="form-group">
        <%= f.submit "Post", class: "btn btn-primary" %>
      </div>
      
      <% f.hidden_field :user_id, :value => @user_id %>
      
    <% end %>
  </div>
</div>

  

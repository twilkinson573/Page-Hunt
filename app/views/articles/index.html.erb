<% content_for :header do %>
  Pitches
<% end %>
 
<table class="table-main">

<% @articles.each do |article| %>
  <tr class="row-main">
    <td class="user-thumb-with-tooltip">
      <%= image_tag article.user.avatar.url(:thumb) %>
    </td>
    <td class="data-title">
      <%= link_to article_path(article) do %>
        <%= article.title %>
      <% end %>
    </td>
    <td class="data-sub"><%= article.text[0..70] %>
      <%if article.text.length > 70 %>
        ...
      <% end %>
    </td>
    <% if article.user == current_user %>
      <td class="data-link">
        <%= link_to edit_article_path(article) do %>
          <span class="glyphicon glyphicon-edit"></span>
        <% end %>
      </td>
      <td class="data-link">
        <%= link_to article_path(article), method: :delete, data: { confirm: 'Delete your post?' } do %>
          <span class="glyphicon glyphicon-trash"></span>
        <% end %>
      </td>
    <% end %>
  </tr>
<% end %>
</table>


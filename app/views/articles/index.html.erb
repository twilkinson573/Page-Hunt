<% content_for :header do %>
  Pitches
<% end %>
 
<table class="table-main">

<% @articles.each do |article| %>
  <tr class="row-main">
    <td class="user-thumb-with-tooltip">
      <!--<%= article.user.name %>-->
      <%= image_tag article.user.avatar.url(:thumb) %>
    </td>
    <td class="data-title">
      <%= link_to article.link, :target => '_blank' do %>
        <%= article.title %>
      <% end %>
    </td>
    <td class="data-sub"><%= article.text[0..70] %>
      <% if article.text.length > 70 %>
        ...
      <% end %>
      <span class="details">
        <%= link_to article_path(article) do %>
          <% if article.comments.count > 0 %>
            <%= article.comments.count %> comments
            <% else %>
              View Details
          <% end %>
        <% end %>
      </p>
    </td>
   <!-- <td>
      <% article.comments.count %> comments
    </td>-->
    <% if article.user == current_user %>
      <td class="data-link">
        <%= link_to edit_article_path(article) do %>
          Edit <span class="fa fa-edit"></span>
        <% end %>
      </td>
      <td class="data-link">
        <%= link_to article_path(article), method: :delete, data: { confirm: 'Delete your post?' } do %>
          <span class="fa fa-trash-o"></span>
        <% end %>
      </td>
    <% end %>
  </tr>
<% end %>
</table>

